%include "io.inc"
;рекурсия: вывести 2^n - 1 символ  '*'
section .text
function:
    push ebp
    mov ebp, esp
    
    push ecx
    mov ecx, [ebp + 8]
    cmp ecx, 0
    je fin
    dec ecx
    push ecx
    call function
    call function
    add esp, 4
    PRINT_CHAR '*'
fin:
    pop ecx
    mov esp, ebp
    pop ebp
    ret

global CMAIN
CMAIN:
    GET_UDEC 4, ecx          ;get n
    push ecx
    call function
    add esp, 4    
    xor eax, eax
    ret